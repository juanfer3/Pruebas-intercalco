<p id="notice"><%= notice %></p>

<h1>Facturas</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Nombre</th>
      <th>Nit</th>
      <th>Telefono</th>
      <th>Lugar de factura</th>
      <th>Telefono</th>
      <th>Correo</th>
      <th>Recibe</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturas.each do |factura| %>
      <tr>
        <td><%= factura.cliente %></td>
        <td><%= factura.nombre %></td>
        <td><%= factura.nit %></td>
        <td><%= factura.telefono %></td>
        <td><%= factura.lugar_de_factura %></td>
        <td><%= factura.telefono %></td>
        <td><%= factura.correo %></td>
        <td><%= factura.recibe %></td>
        <td><%= link_to 'Show', factura %></td>
        <td><%= link_to 'Edit', edit_factura_path(factura) %></td>
        <td><%= link_to 'Destroy', factura, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

