<%= simple_form_for(@mini_pedido) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :cantidad %>
    <%= f.association :pedido %>
    <%= f.association :tinta %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
